@using Podcaster.Models
@model IEnumerable<PodcastEpisodeModel>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <table cellpadding="0" cellspacing="0">
        <tr>
            <th>Podcast</th>
            @*<th>Rate</th>*@
        </tr>
        @foreach (PodcastEpisodeModel pod in Model)
        {
            <td>@pod.Description</td>
            <tr>
                @*<td>@pod.Currency</td>   
                <td>@pod.Rate</td>*@   
                
                <td>@pod.episodeTitle</td>
                <td>@pod.PublicationDate</td>
               
            </tr>
        }
    </table>
</body>
</html>



